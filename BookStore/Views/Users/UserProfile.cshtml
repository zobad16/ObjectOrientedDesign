@model BookStore.Models.User

@{
    ViewBag.Title = "User Profile";
}

<div class="row mt-5 mb-5">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h2>User Profile</h2>
                <p>
                    You can View your profile on this screen
                </p>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <form action="Users/Edit"  method="post">
                    <div class="form-group">
                        <input asp-for="UserId" type="text" class="form-control" id="InputUserId"
                               name="id" readonly value="@Model.Id" hidden="hidden">
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName">User Name</label>
                        <input asp-for="UserName" type="text" class="form-control" id="InputUserName"
                               aria-describedby="UserHelp" placeholder="Enter Username"
                               name="username" readonly value="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="InputFirstName">First Name</label>
                        <input type="text" class="form-control" id="InputFirstName"
                               aria-describedby="UserHelp" placeholder="Enter First Name"
                               name="firstname" readonly value="@Model.FirstName">
                    </div>
                    <div class="form-group">
                        <label for="InputLastName">Last Name</label>
                        <input type="text" class="form-control" id="InputLastName"
                               aria-describedby="UserHelp" placeholder="Enter Last Name"
                               name="lastname" readonly value="@Model.LastName">
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>
        </div>

    </div>
</div>


